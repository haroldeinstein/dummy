#welcome {
 height: 100%;
 margin: 0px auto;
 position: relative;
}

.welcome-content {
  width: 100%;
}

.logo {
  height: 13.4em;
  width: 50.0em;
  background-image: url(<%= asset_path "welcome/dummy_logo.png" %>);
  background-size: 100% 100%;
}

@media screen and (-webkit-min-device-pixel-ratio: 2) {
  .logo {
    background-image: url(<%= asset_path "welcome/dummy_logo@2x.png" %>);
    background-size: 100% 100%;
  }
}

#navbar {
  margin-top: 5.0em;
}

.nav-item {
  float: right;
  margin-left: 8.0em;

  &.first {
    margin-left: 0em;
  }

  li {
    margin-bottom: 1.0em;
  }
}

.mobile {
  display: none;
}

.news {
  position: absolute;
  bottom: 5%;
  right: 20px;
}

@media screen and (max-width: 1064px) {
  .news {
    right: 20px;
  }
}

@media screen and (max-device-width: 768px) {
  .logo {
    margin-left: 4.0em
  }

  #navbar {
    padding-left: 7.0em;
    text-align: center;
  }

  .nav-item {
    float: none;
    margin: 0em 4em;
    font-size: 0.7em;
    display: inline-block;
    &:not(.mobile) {
      display: none;
    }

    &.first {
      margin-left: 4.0em;
    }
  }

  .news {
    font-size: 18px;
    margin-right: 20px;
  }
}

@media screen and (max-device-width: 400px) {
  .logo {
    width: 28.0em;
    height: 75.04px;
    margin: 0px auto;
  }

  #navbar {
    margin-top: 5.0em;
    text-align: center;
    padding-left: 0em;
  }

  .nav-item {
    float: none;
    margin: 0px;
    margin-left: 0em;
    margin-bottom: 1.6em;
    width: 100%;
    font-size: 1em;
    &.first {
      margin-left: 0px;
    }
  }

  h2.home {
    font-weight: normal;
    font-size: 2.4em;
    text-align: center;
  }

  h2.news {
    position: static;
    width: 100%;
    border-top: 1px solid #333;
    margin-top: 20px;
    padding-top: 18px;
  }

  #welcome-table {
    height: 80% !important;
  }

  h2.home a {
    display: block;
  }
}

@media screen and (max-device-height: 360px) {
  #navbar {
    margin-top: 3em;
  }

  .nav-item {
    margin-bottom: 1.2em;
  }

  h2.news {
    padding-top: 14px;
  }
}
