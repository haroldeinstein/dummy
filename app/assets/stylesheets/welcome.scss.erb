#welcome {
 height: 100%;
 margin: 0px auto;
 position: relative;
}

.welcome-content {
  width: 100%;
}

.logo {
  height: 13.4em;
  width: 50.0em;
  background-image: url(<%= asset_path "welcome/dummy_logo.png" %>);
  background-size: 100% 100%;
}

@media screen and (-webkit-min-device-pixel-ratio: 2) {
  .logo {
    background-image: url(<%= asset_path "welcome/dummy_logo@2x.png" %>);
    background-size: 100% 100%;
  }
}

#navbar {
  margin-top: 5.0em;
}

.nav-item {
  float: right;
  margin-left: 8.0em;
}

.nav-item.first {
  margin-left: 0em;
}

.nav-item li {
  margin-bottom: 1.0em;
}

.news {
  position: absolute;
  bottom: 5%;
  right: 0px;
}

@media screen and (max-width: 1064px) {
  .news {
    right: 20px;
  }
}

@media screen and (max-device-width: 768px) {
  .logo {
    margin: 0px auto;
  }
}

@media screen and (max-device-width: 320px) {
  .logo {
    width: 280px;
    height: 75.04px;
  }

  #navbar {
    margin-top: 5.0em;
    text-align: center;
  }

  .nav-item {
    float: none;
    display: inline-block;
    margin-left: 0em;
    margin-bottom: 1.6em;
    width: 100%;
  }

  h2.home {
    font-weight: normal;
    font-size: 2.4em;
    text-align: center;
  }

  h2.news {
    position: static;
    width: 100%;
    border-top: 1px solid #333;
    margin-top: 20px;
    padding-top: 18px;
  }

  #welcome-table {
    height: 80% !important;
  }

  h2.home a {
    display: block;
  }
}

@media screen and (max-device-height: 360px) {
  #navbar {
    margin-top: 3em;
  }

  .nav-item {
    margin-bottom: 1.2em;
  }

  h2.news {
    padding-top: 14px;
  }
}
