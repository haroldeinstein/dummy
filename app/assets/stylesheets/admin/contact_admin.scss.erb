#rep-modal-container {
  width: 262px;
  background: rgba(255, 243, 42, 0.5);
  position: absolute;
  display: none;
  padding: 24px;
  -moz-border-radius: 8px;
  border-radius: 8px;
}

.rep {
  cursor: pointer;
}

label {
  float: none;
}

#cancel {
  width: 30px;
  height: 30px;
  position: absolute;
  left: -15px;
  top: -15px;
  background: #ccc;
  border-radius: 40px;
  border: none;
}

#add-rep {
  float: right;
}
