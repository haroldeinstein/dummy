$yellow: rgba(255, 243, 42, 0.5);
$other-yellow: rgba(255, 243, 42, 1);

#rep-modal-container {
  width: 262px;
  background-color: $yellow;
  position: fixed;
  display: none;
  padding: 24px;
  -moz-border-radius: 8px;
  border-radius: 8px;
}

.rep {
  cursor: pointer;
}

label {
  float: none;
}

#cancel {
  width: 30px;
  height: 30px;
  position: absolute;
  left: -15px;
  top: -15px;
  border-radius: 40px;
  border: none;
  font-family: $gotham;
  font-weight: bold;
  text-align: center;
  color: #000;
  line-height: 28px;
  background-color: $other-yellow;
}

#add-rep {
  float: right;
}

.contact-headline {
  cursor: pointer;
}

#edit-headline {
  position: relative;
  top: -9px;
  padding: 0px;
  width: 100%;
  text-align: center;
}

#office {
  .office-address, .office-person {
    cursor: pointer;
  }
}

#reps {
  max-width: 49em !important;
  h2 {
    margin-left: 60px;
  }
  .rep {
    width: 14.0em;
    &.first {
      margin-left: 6.0em !important;
    }
  }
}

