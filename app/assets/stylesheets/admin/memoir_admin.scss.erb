#modal {
  z-index: 2;
  background: #fff;
  margin: 0em auto;
  position: absolute;
  padding: 3.0em;

  #new-image {
    width: 63.2em;
    height: 36.0em;
    box-sizing: border-box;
    border: 1px solid #ccc;
    position: relative;
    margin-bottom: 2.0em;
  }

  #new-caption {
    box-sizing: border-box;
    width: 100%;
    border: 1px solid #ccc;
  }

  h3 {
    color: #ccc;
  }

  .form-data {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -120px;
    margin-top: -11px;
  }
}

.hide {
  display: none;
  visibility: none;
}

.post:hover {
  border: 1px dashed #999;
  box-sizing: border-box;
  cursor: pointer;
}


