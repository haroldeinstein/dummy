#modal {
  z-index: 2;
  background: #fff;
  margin: 0em auto;
  position: fixed;
  padding: 3.0em;

  #new-image {
    width: 63.2em;
    height: 36.0em;
    box-sizing: border-box;
    border: 1px solid #ccc;
    position: relative;
    margin-bottom: 2.0em;
  }

  #new-caption {
    box-sizing: border-box;
    width: 100%;
    border: 1px solid #ccc;
  }

  h3 {
    color: #ccc;
  }

  .form-data {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -120px;
    margin-top: -11px;
  }
}

.hide {
  display: none;
  visibility: hidden;
}

.post:hover {
  border: 1px dashed #999;
  box-sizing: border-box;
  cursor: pointer;
}

#rep-modal-container {
  width: 262px;
  background: rgba(255, 243, 42, 0.5);
  position: absolute;
  display: none;
  padding: 24px;
  -moz-border-radius: 8px;
  border-radius: 8px;
}

.edit-description {
  width: 254px;
  height: 100px;
}
