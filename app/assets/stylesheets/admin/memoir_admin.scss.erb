table.memoir {
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: 2;
}

#modal {
  z-index: 2;
  background: #fff;
  width: 50.0em;
  margin: 0em auto;
}

.image-uploader.hide {
  display: none;
  visibility: none;
}

textarea {
  border: 1px dashed #555;
  font-weight: 300;
  background: transparent;
  color: #fff;
  max-width: 42.0em;
  position: absolute;
  bottom: 0px;
  right: 0px;
}
