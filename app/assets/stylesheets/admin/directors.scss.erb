#director {
  height: 50.0em;
}

#videos-list-container {
  width: 34%;
  height: 100%;
  padding-bottom: 8px;
  float: left;
  text-align: center;

  a {
    color: #fdb5af;
    text-decoration: underline;
  }

  h3 {
    padding: 8px 0px;
    text-transform: lowercase;
  }
}

#videos-container {
  float: right;
  width: 66%;
  margin-top: 4.0em;
  height: 42.0em;
}

#video-player-container {
  width: 100%;
  box-sizing: border-box;
  border: 1px solid #333;
  padding-bottom: 56.7%;
  position: relative;
  overflow: scroll;
}

#videos {
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: scroll;
}

.video {
  width: 33.3%;
  float: left;

  &.selected {
  }

  img {
    width: 100%;
  }
}

.video-title {
  position: relative;

  .remove-video {
    width: 2.4em;
    height: 2.4em;
    margin-top: 0.7em;
    position: absolute;
    display: block;
    top: 0em;
    right: 0em;
    background: #ccc;
    display: none;
    line-height: 2.4em;
    text-align: center;
    color: #333 !important;
    text-decoration: none !important;

    &:hover {
      background: #777;
    }
  }

  .reorder-video {
    @extend .remove-video;
    right: 2.4em;
  }

  &:hover .remove-video {
    display: block;
  }
}

input.edit-title {
  text-align: center;
  text-transform: lowercase;
  font-size: 2.2em;
  font-weight: 500;
  padding-left: 0em;
  box-sizing: border-box;
  margin: 0px;
}

