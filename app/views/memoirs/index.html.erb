<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag :memoir %>
<% end %>

<div id="special-ones">
  <div class="w1064">
    <div id ="description">
      <h2><%= @description.title %></h2>
      <p class="description"><%= @description.description %></p>
    </div>
  </div>

  <div id="post-container-container-container-container">
    <div id="post-container-container-container">
      <div id="post-container-container" class="w1064 ">
        <div id="post-container" class="clearfix">

          <% memoirs.each do |memoir| %>
            <div class="post clearfix">
              <div class="image">
                <img src="<%= memoir.image.url %>">
              </div>
              <div class="captions">
                <p class="caption">
                  <%= memoir.caption %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  var Bootstrap = Bootstrap || {};
  Bootstrap.postCount = <%= memoirs.length %>;

  var $window = $(window);
  function positionBtn($btn) {
    if ($window.height() < 830) {
      $btn.css({
        'top': '730px',
        'bottom': 'auto'
      });
    } else {
      $btn.css({
        'top': 'auto',
        'bottom': '5.0em'
      });
    }
  }

  $(document).ready(function() {
    var $btn = $('.back');

    $window.bind('resize', function() {
      positionBtn($btn);
    });

    positionBtn($btn);
  });
</script>
<%= javascript_include_tag :memoirs %>


