<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag :admin %>
<% end %>

<div id="contact">
  <div class="contact_content">
    <p>
      Dummy was started on October 1, 2013 by Director Harold Einstein and his
      longtime Executive Producer, Eric Liney.
    </p>
    <div id="office">
      <h2>office</h2>
      <address>
        1134 abbot kinney<br>
        venice, ca 94354<br>
        phone 310.444.1234
      </address>
      <br>
      <br>
      <br>
      <p class="bold">executive producer</p>
      <p class="bold">eric liney</p>
    </div>

    <div id="reps">
      <h2>reps</h2>
      <% @rep_locations.each do |rl| %>
        <div class="rep" data-id="<%= rl.id %>" data-location="<%= rl.location %>">
          <p class="location"><%= rl.location %></p>
          <% rl.reps.sort_by!{|rep| rep.id}.each do |r| %>
            <p class="bold"><%= r.name %></p>
          <% end %>
        </div>
      <% end  %>
      <% @blanks.each do |blank| %>
        <div class="rep blank">
          <p class="location"></p>
        </div>
      <% end %>
    </div>

  </div>
</div>

<%= content_for :javascripts do %>
  <%= javascript_include_tag :contacts_admin %>
<% end %>
