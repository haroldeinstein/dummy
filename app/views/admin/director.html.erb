<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag :admin %>
<% end %>

<table cellpadding="0" cellspacing="0" border="0" width="100%" height="90%">
  <tbody>
    <tr>
      <td valign="middle">
        <div id="director" class="clearfix">
          <div id="videos-list-container">
            <table cellpadding="0" cellspacing="0" border="0" width="100%" height="100%">
              <tbody>
                <tr>
                  <td valign="middle">
                    <div id="videos-list">
                      <h4><a href="#" id="add-video">Add videos</a></h4>

                      <% @director.projects.each do |p| %>
                        <div style="position: relative;" class="video-title">
                          <h4 class="project"><%= p.title %></h4>
                          <a href="#" class="remove-video" data-id="<%= p.id %>"></a>
                        </div>
                      <% end %>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <div id="videos-container">
            <table cellpadding="0" cellspacing="0" border="0" width="100%" height="100%">
              <tbody>
                <tr>
                  <td valign="middle">
                    <div id="video-player">
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </td>
    </tr>
  </tbody>
</table>

<script>
  var Bootstrap = {};
  Bootstrap.director_id = <%= @director.id %>;
</script>
