<%= content_for :stylesheets do %>
  <%= stylesheet_link_tag :admin %>
<% end %>

<table cellpadding="0" cellspacing="0" border="0" width="100%" height="90%">
  <tbody>
    <tr>
      <td valign="middle">
        <div id="director" class="clearfix">
          <div id="videos-list-container">
            <table cellpadding="0" cellspacing="0" border="0" width="100%" height="100%">
              <tbody>
                <tr>
                  <td valign="middle">
                    <div id="videos-list">
                      <h3><a href="#" id="add-video">add videos</a></h3>

                      <% @director.projects.order('sort_index').each do |p| %>
                        <div style="position: relative;" class="video-title" id="p_<%= p.vimeo_id %>">
                          <h3 class="project"><%= p.title %></h3>
                          <a href="#" class="reorder-video" data-id="<%= p.vimeo_id %>">&#8645;</a>
                          <a href="#" class="remove-video" data-id="<%= p.vimeo_id %>">X</a>
                        </div>
                      <% end %>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

          <div id="videos-container">
            <table cellpadding="0" cellspacing="0" border="0" width="100%" height="100%">
              <tbody>
                <tr>
                  <td valign="middle">
                    <div id="video-player-container">
                      <div id="videos"></div>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </td>
    </tr>
  </tbody>
</table>

<script>
  var Bootstrap = {};
  Bootstrap.director_id = <%= @director.id %>;
</script>

